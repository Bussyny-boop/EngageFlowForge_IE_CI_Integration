<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.exceljson.AppController">
    <top>
        <VBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Label text="Engage Rules Generator" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="btnLoad" text="Load Excel" onAction="#onLoadExcel" />
                <Button fx:id="btnGenerate" text="Generate JSON" onAction="#onGenerateJson" />
                <Button fx:id="btnSave" text="Save Excel" onAction="#onSaveExcel" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="generateNurseJsonButton" text="Generate NurseCall JSON" />
                <Button fx:id="generateClinicalJsonButton" text="Generate Clinical JSON" />
                <Button fx:id="exportNurseJsonButton" text="Export NurseCall JSON" />
                <Button fx:id="exportClinicalJsonButton" text="Export Clinical JSON" />
            </HBox>
            <Separator />
        </VBox>
    </top>
    <center>
        <SplitPane orientation="VERTICAL" dividerPositions="0.65">
            <items>
                <TabPane tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Units">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableUnits" />
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                        <Tab text="Nurse Calls">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableNurseCalls" />
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                        <Tab text="Clinicals">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableClinicals" />
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <VBox spacing="5">
                    <Label text="JSON Preview" />
                    <TextArea fx:id="jsonPreview" wrapText="true" prefRowCount="10" />
                </VBox>
            </items>
        </SplitPane>
    </center>
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
</BorderPane>
