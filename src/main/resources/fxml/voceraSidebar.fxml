<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox fx:id="sidebarRoot"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    spacing="8"
    styleClass="sidebar-root sidebar"
    prefWidth="220.0" minWidth="50.0">

    <!-- Header with toggle button -->
    <HBox fx:id="sidebarHeader" alignment="CENTER_LEFT" spacing="8">
        <Button fx:id="toggleSidebarBtn" text="â—€" styleClass="toggle-sidebar-btn" />
        <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
            <image><Image url="@/icon_32.png" /></image>
        </ImageView>
        <Label fx:id="sidebarTitleLabel" text="vocera" styleClass="sidebar-title" />
    </HBox>

    <!-- Collapsed icons bar (shown only when sidebar is collapsed) -->
    <VBox fx:id="collapsedIconBar" spacing="10" visible="false" managed="false">
        <Button fx:id="btnIconLoad" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-teal">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/load-ndw.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
        <Button fx:id="btnIconViews" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-green">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/views_icon.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
        <Button fx:id="btnIconActions" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-purple">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/preview.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
        <Button fx:id="btnIconExport" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-orange">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/export_icon.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
        <Button fx:id="btnIconTools" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-blue">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/tools_icon.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
        <Button fx:id="btnIconSettings" styleClass="collapsed-icon-btn">
            <graphic>
                <StackPane styleClass="icon-box icon-soft-blue">
                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                        <image><Image url="@/icons/settings.png" /></image>
                    </ImageView>
                </StackPane>
            </graphic>
        </Button>
    </VBox>

    <VBox fx:id="voceraSections" styleClass="sidebar-accordion" spacing="6">
        <TitledPane fx:id="paneLoad" text="ðŸ“‚ LOAD DATA" expanded="false" styleClass="sidebar-section">
            <VBox spacing="6" styleClass="sidebar-section-content" fillWidth="true">
                <Button text="NDW File"    fx:id="btnNdw"       styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-teal">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/load-ndw.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Engage XML"  fx:id="btnXml"       styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-blue">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/load-xml.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Engage JSON" fx:id="btnJson"      styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-purple">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/load-json.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
            </VBox>
        </TitledPane>

        <TitledPane fx:id="paneViews" text="ðŸ‘ï¸ TABLE VIEWS" expanded="false" styleClass="sidebar-section">
            <VBox spacing="6" styleClass="sidebar-section-content" fillWidth="true">
                <Button text="Units"       fx:id="btnUnits"      styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-green">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/unit.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Nurse Calls" fx:id="btnNurseCalls" styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-teal">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/nurse.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Clinicals"   fx:id="btnClinicals"  styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-orange">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/clinical.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Orders"      fx:id="btnOrders"     styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-blue">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/orders.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
            </VBox>
        </TitledPane>

        <TitledPane fx:id="paneActions" text="âš¡ ACTIONS" expanded="false" styleClass="sidebar-section">
            <VBox spacing="6" styleClass="sidebar-section-content" fillWidth="true">
                <Button text="View JSON" fx:id="btnViewJson"    styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-purple">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/preview.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Save to NDW" fx:id="btnSaveNdw" styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-green">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/save.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
            </VBox>
        </TitledPane>

        <TitledPane fx:id="paneExport" text="ðŸ“¤ EXPORT" expanded="false" styleClass="sidebar-section">
            <VBox spacing="6" styleClass="sidebar-section-content" fillWidth="true">
                <Button text="Nursecall" fx:id="btnExportNursecall" styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-teal">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/export-nurse.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Clinicals" fx:id="btnExportClinicals" styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-orange">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/export-clinical.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Orders"    fx:id="btnExportOrders"    styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-blue">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/export-orders.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
            </VBox>
        </TitledPane>

        <TitledPane fx:id="paneTools" text="ðŸ› ï¸ TOOLS" expanded="false" styleClass="sidebar-section">
            <VBox spacing="6" styleClass="sidebar-section-content" fillWidth="true">
                <Button text="âš™ Settings"  fx:id="btnSettings"  styleClass="sidebar-button sidebar-item" />
                <Button text="Visual Flow" fx:id="btnVisualFlow" styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-green">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/visual-flow.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Reset Data"  fx:id="btnResetData"  styleClass="sidebar-button sidebar-item">
                    <graphic>
                        <StackPane styleClass="icon-box icon-soft-orange">
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image><Image url="@/icons/clear.png" /></image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                </Button>
            </VBox>
        </TitledPane>
    </VBox>
</VBox>
