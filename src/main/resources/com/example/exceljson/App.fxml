<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.exceljson.AppController">
    <top>
        <VBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Label text="Engage Rules Generator" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="loadButton" text="Load Excel" />
                <Button text="Generate JSON" disable="true" />
                <Button text="Save Excel" disable="true" />
            </HBox>
            <Label fx:id="statusLabel" text="Ready" />
            <HBox spacing="10">
                <Button fx:id="generateNurseJsonButton" text="Generate NurseCall JSON" />
                <Button fx:id="generateClinicalJsonButton" text="Generate Clinical JSON" />
                <Button fx:id="exportNurseJsonButton" text="Export NurseCall JSON" />
                <Button fx:id="exportClinicalJsonButton" text="Export Clinical JSON" />
            </HBox>
            <Separator />
        </VBox>
    </top>
    <center>
        <SplitPane orientation="VERTICAL" dividerPositions="0.65">
            <items>
                <TabPane tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Units">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableUnits">
                                            <columns>
                                                <TableColumn fx:id="unitFacilityCol" prefWidth="120.0" text="Facility" />
                                                <TableColumn fx:id="unitNamesCol" prefWidth="160.0" text="Unit Names" />
                                                <TableColumn fx:id="unitNurseGroupCol" prefWidth="140.0" text="Nurse Group" />
                                                <TableColumn fx:id="unitClinicalGroupCol" prefWidth="140.0" text="Clinical Group" />
                                                <TableColumn fx:id="unitNoCareGroupCol" prefWidth="160.0" text="No Care Group" />
                                                <TableColumn fx:id="unitCommentsCol" prefWidth="200.0" text="Comments" />
                                            </columns>
                                        </TableView>
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                        <Tab text="Nurse Calls">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableNurseCalls">
                                            <columns>
                                                <TableColumn fx:id="nurseConfigGroupCol" prefWidth="160.0" text="Config Group" />
                                                <TableColumn fx:id="nurseAlarmNameCol" prefWidth="200.0" text="Alarm Name" />
                                                <TableColumn fx:id="nurseSendingNameCol" prefWidth="200.0" text="Sending Name" />
                                                <TableColumn fx:id="nursePriorityCol" prefWidth="120.0" text="Priority" />
                                                <TableColumn fx:id="nurseDeviceACol" prefWidth="140.0" text="Device A" />
                                                <TableColumn fx:id="nurseRingtoneCol" prefWidth="140.0" text="Ringtone" />
                                            </columns>
                                        </TableView>
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                        <Tab text="Clinicals">
                            <content>
                                <BorderPane prefHeight="200.0" prefWidth="200.0">
                                    <center>
                                        <TableView fx:id="tableClinicals">
                                            <columns>
                                                <TableColumn fx:id="clinicalConfigGroupCol" prefWidth="160.0" text="Config Group" />
                                                <TableColumn fx:id="clinicalAlarmNameCol" prefWidth="200.0" text="Alarm Name" />
                                                <TableColumn fx:id="clinicalSendingNameCol" prefWidth="200.0" text="Sending Name" />
                                                <TableColumn fx:id="clinicalPriorityCol" prefWidth="120.0" text="Priority" />
                                                <TableColumn fx:id="clinicalDeviceACol" prefWidth="140.0" text="Device A" />
                                                <TableColumn fx:id="clinicalRingtoneCol" prefWidth="140.0" text="Ringtone" />
                                            </columns>
                                        </TableView>
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <VBox spacing="5">
                    <Label text="JSON Preview" />
                    <TextArea fx:id="jsonPreview" wrapText="true" prefRowCount="10" />
                </VBox>
            </items>
        </SplitPane>
    </center>
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>
</BorderPane>
